<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintHeight_percent="0"
        app:layout_constraintTop_toTopOf="parent"/>
    <com.fabian.timer.flip.FlipDigit
        android:id="@+id/hours_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:isFast="true"
        app:tintColor="#000000"
        android:layout_marginStart="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/hours_2"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <com.fabian.timer.flip.FlipDigit
        android:id="@+id/hours_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:isFast="true"
        app:tintColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/hours_1"
        app:layout_constraintRight_toLeftOf="@+id/colon"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <TextView
        android:id="@+id/colon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:layout_constraintWidth_percent="0.03"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/hours_2"
        app:layout_constraintRight_toLeftOf="@+id/minutes_1"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <com.fabian.timer.flip.FlipDigit
        android:id="@+id/minutes_1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:isFast="true"
        app:tintColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/colon"
        app:layout_constraintRight_toLeftOf="@+id/minutes_2"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
    <com.fabian.timer.flip.FlipDigit
        android:id="@+id/minutes_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        app:isFast="true"
        app:tintColor="#000000"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/minutes_1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"/>
</androidx.constraintlayout.widget.ConstraintLayout>